<% provide(:title, "MyList") %>

<div class="row">
  <aside class="col-md-4">
		<section class="user_info">
		  <%= render 'user_info' %>
		</section>
    <section class="mylist_form">
      <%= render 'mylist_form' %>
    </section>
  </aside>
  <div class="col-md-8 list">
      <h3>My School List ( <%= current_user.my_schools.count %> )</h3>
      <ol class="my_schools ol_format">
        <%= render current_user.my_schools %>
      </ol>
  </div>
  
</div>